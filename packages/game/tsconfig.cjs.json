{
  "extends": "../../tsconfig.base.json",
  "exclude": ["**/*.test.ts"],
  "include": ["src/**/*", "types"],
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["esnext"],
    "isolatedModules": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "paths": {
      "common/*": ["src/common/*"],
      "components/*": ["src/components/*"],
      "core/*": ["src/core/*"],
      "lib/*": ["src/lib/*"],
      "src/*": ["src/*"],
      "types/*": ["types/*"]
    },
    "removeComments": true,
    "rootDir": "src",
    "target": "es6"
  }
}
