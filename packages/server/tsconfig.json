{
  "extends": "../../tsconfig.base.json",
  "include": ["src/**/*.ts", "types"],
  "compilerOptions": {
    "baseUrl": "src",
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "core/*": ["src/core/*"],
      "rpc/*": ["src/rpc/*"]
    },
    "outDir": "build",
    "rootDir": "src",
    "target": "es6",
    "types": ["@seawars/game"]
  }
}
